@model GymClass.BusinessLogic.Entities.GymClass

@{
    ViewData["Title"] = "Create";
}
<div class="row center-content">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center uppercase-label">
                <strong><label asp-for="Name" class="control-label"></label></strong>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-center uppercase-label">
                <strong><label asp-for="StartTime" class="control-label"></label></strong>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group text-center uppercase-label">
                <strong><label asp-for="Duration" class="control-label"></label></strong>
                <input asp-for="Duration" type="time" class="form-control"/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group text-center uppercase-label">
                <strong><label asp-for="Description" class="control-label"></label></strong>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-center uppercase-label">
                <input type="submit" value="Create" class="btn btn-color btn-padding" />
                <a asp-action="Index" class="btn btn-color btn-padding">Back to List</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
